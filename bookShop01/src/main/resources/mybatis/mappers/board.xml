<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
      PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
   "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="mapper.board">
<resultMap id="articlesResult" type="articleVO">
    <result property="level" column="level" />
    <result property="articleNO" column="articleNO" />
    <result property="title" column="title" />
    <result property="content" column="content" />
    <result property="writeDate" column="writeDate" />
    <result property="imageFileName" column="imageFileName" />
    <result property="member_id" column="member_id" />
  </resultMap> 
  
  <resultMap id="imgResult" type="imageVO">
	  <result property="imageFileNO" column="imageFileNO" />
	  <result property="articleNO" column="articleNO" />
	  <result property="imageFileName" column="imageFileName" />
 </resultMap>

  <select  id="selectImageFileList" resultMap="imgResult" parameterType="int">
    <![CDATA[
      SELECT * from t_board_image
      where articleNO=#{articleNO}	
    ]]>
 </select> 
   
<!--  페이징 추가 -->
  <select id="selectAllArticlesList" parameterType="java.util.Map" resultMap="articlesResult">
    <![CDATA[
      SELECT * FROM (
				select ROWNUM  as recNum,
                                    articleNO,
                                    title,
                                    member_id,
                                    writeDate
		                            from (select articleNO,
											        title,
													member_id,
													writeDate
													from t_shopping_board
													ORDER BY articleNO DESC)
					)                         
					where recNum between(#{section}-1)*100+(#{pageNum}-1)*10+1 and (#{section}-1)*100+#{pageNum}*10                          
                    
    ]]>
  </select>

  <select id="selectTotArticles" resultType="int">
		<![CDATA[  
			select count(articleNO) from t_shopping_board
		 ]]>
  </select>
  

